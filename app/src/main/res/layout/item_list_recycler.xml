<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.travel.app.helper.AnimationNetworkImageView
                android:id="@+id/tour_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:background="@color/md_grey_600"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tour_image"
                tools:text="999999"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:id="@+id/tour_price"
                android:background="@drawable/rounded_corners_alpha"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tour_hotel_country_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tour_hotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryText"
                    tools:text="Hotel"/>
                <TextView
                    android:id="@+id/tour_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    tools:text="Country"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tour_hotel_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tour_hotel_star_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/tour_hotel_star_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/tour_hotel_star_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/tour_hotel_star_four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/tour_hotel_star_five"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_star"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:text="Дней: 99 Вылет: 99.99.99 из г. Москва"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:id="@+id/tour_days_date_from"/>
    </LinearLayout>

</android.support.v7.widget.CardView>